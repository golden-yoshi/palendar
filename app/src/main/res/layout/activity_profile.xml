<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activity.ProfileActivity">

    <ImageView
        android:id="@+id/friend_profile_image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/friend_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/friend_details"
        android:layout_below="@+id/friend_profile_image"
        android:textSize="20sp"
        android:gravity="center_horizontal" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/friend_profile_name"
        android:gravity="bottom"
        android:id="@+id/friend_week_list_view"/>

</RelativeLayout>